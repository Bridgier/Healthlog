<% form_for :entry do |form| %>
  <fieldset>
    <legend>New Log Entry</legend>
    
    <%= error_messages_for "user" %>

    <table>
    <tr>
    <td>
    <div class="form_row">
    <label for="weight">Weight:</label>
    <%= form.text_field :weight %>
    </div>
    </td>
    <td>
    <div class="form_row">
    <label for="entry_date">Date:</label>
    <%= date_select("post", :entry_date) %>
    <br/>
    </div>
    </td>
    </tr>
    <tr>
    <td colspan='2'>
    <div class="form_row">
    <label for="notes">Notes:</label>
    <%= form.text_area :notes, :size => '100x3'  %>
    <br/>
    </div>
    </td>
    </tr>
    </table>
    <%= submit_tag "Save", "class" => "submit" %>
  </fieldset>
<% end %>
