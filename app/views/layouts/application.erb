<html>
  <head>
    <title><%= @title %></title>
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'cyclingRecord.js'%>
  </head>
  <body>
    <div id="whole_page">

      <div id="nav">

	<span style="float: right">

        <% if logged_in? -%>
          
          <%= link_to_unless_current "Logout",	:action => "logout",
                                                :controller => "users" %> 
	<% else -%>

          <%= link_to_unless_current "Register",	:action => "new",
                                                :controller => "users" %> |
          <%= link_to_unless_current "Login",	:action => "login",
                                                :controller => "users" %> 
        <% end -%>
	</span>
        <%= link_to_unless_current "Home",	:action => "index",
                                                :controller => "site" %> |
        <%= link_to_unless_current "About",	:action => "about",
                                                :controller => "site" %> |
        <%= link_to_unless_current "Help",	:action => "help",
                                                :controller => "site" %> 
      </div>

      <div id="header">Health Log </div> 

      <div id="context_nav">
	<%= render :partial => 'site/context_nav', :collection => @context_links  %>
      </div>

      <div id="content">
        <% if flash[:notice] -%>
          <div id=notice"><%= flash[:notice] %></div>
        <% end -%>
        <%= @content_for_layout %>
      </div>
      <% if ENV["RAILS_ENV"] == "development" %>

        <%= debug(session) %>
      <% end %>
    </div>
  </body>
</html>
